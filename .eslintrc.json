{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"standard"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-console": "warn",
		"mocha/no-exclusive-tests": "warn",
		"indent": ["warn", "tab"],
		"no-tabs": "off",
		"semi": ["error", "always"]
	},
	"plugins": [
		"mocha",
		"prettier"
	]
}