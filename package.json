{
  "name": "isaf",
  "description": "Generates ISAF file from XLSX",
  "author": "vasidovi",
  "license": "ISC",
  "version": "1.0.0",
  "main": "src/app/main.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --reporter spec --timeout 10000",
    "start": "electron .",
    "lint": "./node_modules/.bin/eslint src/**/*.js",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "config": "^3.0.1",
    "dateformat": "^3.0.3",
    "js2xmlparser": "^3.0.0",
    "lodash": "^4.17.11",
    "xlsx": "^0.14.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "electron": "4.0.0",
    "@electron-forge/cli": "^6.0.0-beta.22",
    "@electron-forge/maker-deb": "^6.0.0-beta.22",
    "@electron-forge/maker-rpm": "^6.0.0-beta.22",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.22",
    "@electron-forge/maker-zip": "^6.0.0-beta.22",
    "eslint": "^5.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "sinon": "^7.2.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [{
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "isaf"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}